<div class="alert alert-secondary">
    <a href="#" onclick="PublicBinding.browseHostFiles()">Przeglądaj pliki hosta</a>
</div>
{{#if (eq list.length 0)}}
    <div class="alert alert-secondary" role="alert">
        Nie wysłano żadnych plików
        <button id="refreshHostUpl" class="btn btn-primary" onclick="PublicBinding.refreshHostFiles(this)">
            <i class="fas fa-sync-alt"></i>
        </button>
    </div>
{{else}}
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <td>Nazwa pliku</td>
            <td>Ścieżka źródłowa</td>
            <td>
                <button id="refreshHostUpl" class="btn btn-primary" onclick="PublicBinding.refreshHostFiles(this)">
                    <i class="fas fa-sync-alt"></i> Odśwież
                </button>
            </td>
        </tr>
        </thead>
        {{#each list}}
            <tr>
                <td>{{this.filename}}</td>
                <td>{{this.data.path}}</td>
                <td>
                    <button class="btn btn-primary" onclick="PublicBinding.asyncFileDownload(this, '{{{this.path}}}')">
                        <i class="fas fa-download"></i>
                    </button>
                    <button class="btn btn-danger" onclick="PublicBinding.deleteHostUplFile(this, '{{{this.filename}}}')">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        {{/each}}
    </table>
{{/if}}

